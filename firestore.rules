rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Commentary entries - readable by authenticated users, writable by backend service
    match /commentary/{commentaryId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true || request.auth.token.service_account == true;
    }
    
    // Commentary configuration - readable by authenticated users, writable by admins
    match /commentary_config/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
    
    // Snapshots metadata - writable by backend service, readable for commentary generation
    match /snapshots/{snapshotId} {
      allow read, write: if request.auth.token.admin == true || request.auth.token.service_account == true;
    }
    
    // Monitoring collections - writable by backend service only
    match /monitoring_usage/{usageId} {
      allow write: if request.auth.token.service_account == true;
      allow read: if request.auth.token.admin == true;
    }
    
    match /monitoring_errors/{errorId} {
      allow write: if request.auth.token.service_account == true;
      allow read: if request.auth.token.admin == true;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}